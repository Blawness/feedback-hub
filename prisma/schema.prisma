datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  role      String   @default("developer") // admin, developer
  createdAt DateTime @default(now())

  feedbacks    Feedback[]
  tasks        Task[]
  comments     Comment[]
  chatMessages ChatMessage[]
  chatThreads  ChatThread[]

  @@index([email])
}

model Project {
  id                 String   @id @default(cuid())
  name               String
  slug               String   @unique
  description        String?
  url                String? // homepage or repo URL
  githubRepoId       Int?     @unique // GitHub repo ID for sync
  githubRepoFullName String? // e.g., "Blawness/feedback-hub"
  apiKey             String   @unique
  isActive           Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  feedbacks    Feedback[]
  tasks        Task[]
  chatMessages ChatMessage[]
  chatThreads  ChatThread[]

  @@index([slug])
  @@index([apiKey])
}

enum FeedbackStatus {
  OPEN
  IN_REVIEW
  ASSIGNED
  RESOLVED
  CLOSED
}

model Feedback {
  id          String         @id @default(cuid())
  title       String
  description String
  type        String // bug, feature, improvement, question
  priority    String         @default("medium")
  status      FeedbackStatus @default(OPEN)
  source      String         @default("api") // api, manual, widget
  metadata    Json? // browser, OS, screenshot URL, etc.

  githubIssueNumber Int?
  githubUrl         String?

    // AI-generated fields
    aiSummary           String?
    aiSuggestedType     String? // AI's suggested type classification
    aiSuggestedPriority String? // AI's suggested priority
    aiSentimentScore    Float?  // AI's sentiment score (-1 to 1)
    aiConfidence        Float?  // AI confidence score 0-1
    agentPrompt         String? @db.Text

  projectId  String
  project    Project @relation(fields: [projectId], references: [id])
  assigneeId String?
  assignee   User?   @relation(fields: [assigneeId], references: [id])

  comments Comment[]
  tasks    Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
  @@index([priority])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("todo")
  priority    String    @default("medium")
  dueDate     DateTime?

  projectId  String
  project    Project   @relation(fields: [projectId], references: [id])
  assigneeId String?
  assignee   User?     @relation(fields: [assigneeId], references: [id])
  feedbackId String?
  feedback   Feedback? @relation(fields: [feedbackId], references: [id])

  comments     Comment[]
  chatMessages ChatMessage[]
  chatThreads  ChatThread[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
}

model Comment {
  id      String @id @default(cuid())
  content String

  githubCommentId BigInt? @unique // GitHub comment ID for sync
  isFromGitHub    Boolean @default(false) // true if comment originated from GitHub

  userId     String
  user       User      @relation(fields: [userId], references: [id])
  feedbackId String?
  feedback   Feedback? @relation(fields: [feedbackId], references: [id])
  taskId     String?
  task       Task?     @relation(fields: [taskId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([feedbackId])
  @@index([taskId])
  @@index([githubCommentId])
}

model AiSettings {
  id              String   @id @default("default")
  language        String   @default("auto")
  model           String   @default("gemini-2.0-flash")
  temperature     Float    @default(0.7)
  maxOutputTokens Int      @default(2048)
  topP            Float    @default(0.95)
  topK            Int      @default(40)
  masterPrompt    String?  @db.Text
  templateId      String?  @default("default")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ChatMessage {
  id      String @id @default(cuid())
  role    String // "user" | "assistant"
  content String @db.Text

  threadId String?
  thread   ChatThread? @relation(fields: [threadId], references: [id], onDelete: Cascade)

  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([projectId])
  @@index([userId])
  @@index([threadId])
}

model ChatThread {
  id    String @id
  title String @default("New Chat")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  taskId String?
  task   Task?  @relation(fields: [taskId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  messages ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([taskId])
  @@index([projectId])
}
